<div class="container my-4">
    <!-- Mensaje para usuarios no verificados -->
    {% if unverified_warning|default(false) %}
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle me-2"></i>
            Por favor verifica tu email para acceder a todas las funciones.
            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger ms-2">Cerrar sesión</a>
        </div>
    {% endif %}

    <!-- Contenido principal -->
    <div class="main-grid">
        <!-- Carrusel de fotos (se mantiene igual) -->
        <div class="carousel-container">
            <div id="fotosCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for foto in fotosParaCarrusel %}
                        <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                            <img src="{{ asset(foto.getUrlRelativa()) }}" class="d-block w-100" alt="{{ foto.ave.nombreComun }}">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ foto.ave.nombreComun }}</h5>
                                <p>Fotografiada por {{ foto.usuario.username }} | 
                                <i class="fas fa-heart text-danger"></i> {{ foto.votos|length }} votos
                                </p>
                            </div>
                        </div>
                    {% else %}
                        <div class="carousel-item active">
                            <img src="{{ asset('images/default-bird.jpg') }}" class="d-block w-100" alt="Ave por defecto">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>¡Sube tus fotos!</h5>
                                <p>Sé el primero en compartir tus avistamientos</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#fotosCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#fotosCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </div>
        
        <!-- Mapa de España simplificado con imagen -->
        <div class="map-container">
            <img src="{{ asset('images/mapa-espana.png') }}" class="map-image" alt="Mapa de España">
            <a href="{{ path('app_mapa_aves') }}" class="map-overlay">
                <span class="btn btn-primary btn-lg">
                    <i class="fas fa-expand me-1"></i> Ver mapa interactivo
                </span>
            </a>
        </div>
    </div>
    
    <!-- Segunda fila: Ave destacada (antes "Ave del día") y estadísticas -->
    <div class="main-grid">
        <!-- Ave destacada (con botón añadido) -->
        <div class="ave-del-dia">
            <h2 class="mb-4"><i class="fas fa-dove me-2"></i>Ave destacada</h2>
            {% if aveDelDia %}
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="{{ asset(aveDelDia.imagenNombre ? 'images/aves/' ~ aveDelDia.imagenNombre : 'images/default-bird.jpg') }}" 
                            class="ave-image img-fluid" 
                            alt="{{ aveDelDia.nombreComun }}">
                        <div class="mt-3">
                            <a href="{{ path('app_test_aves') }}" class="btn btn-outline-primary">
                                <i class="fas fa-list me-1"></i> Ver listado completo
                            </a>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h3>{{ aveDelDia.nombreComun }}</h3>
                        <p class="text-muted"><em>{{ aveDelDia.nombreCientifico }}</em></p>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <p><strong>Familia:</strong> {{ aveDelDia.familia }}</p>
                                <p><strong>Orden:</strong> {{ aveDelDia.orden }}</p>
                                <p><strong>Tamaño:</strong> {{ aveDelDia.longitudMinima }} - {{ aveDelDia.longitudMaxima }} cm</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Envergadura:</strong> {{ aveDelDia.envergaduraMinima }} - {{ aveDelDia.envergaduraMaxima }} cm</p>
                                <p><strong>Estado:</strong> {{ aveDelDia.estadoConservacion.nombre }}</p>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            {{ aveDelDia.descripcion|raw }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">
                    No hay ave destacada disponible.
                </div>
            {% endif %}
        </div>
        
        <!-- Sección dividida: Estadísticas + Artículos -->
        {% if app.user and not unverified_warning|default(false) %}
        <div class="split-section">
            <!-- Estadísticas del usuario -->
            <div class="stats-box">
                <h3 class="mb-4"><i class="fas fa-chart-bar me-2"></i>Mis estadísticas</h3>
                
                <div class="text-center mb-3">
                    <h4>{{ stats.avesFotografiadas }} de {{ stats.totalAves }} aves fotografiadas</h4>
                </div>
                
                <div class="progress mb-4" style="height: 25px;">
                    <div class="progress-bar progress-bar-striped" 
                        role="progressbar" 
                        style="width: {{ stats.porcentaje }}%;" 
                        aria-valuenow="{{ stats.porcentaje }}" 
                        aria-valuemin="0" 
                        aria-valuemax="100">
                        {{ stats.porcentaje }}%
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <a href="{{ path('app_mi_perfil') }}" class="btn btn-outline-primary">
                        <i class="fas fa-user-circle me-1"></i> Ver perfil completo
                    </a>
                </div>
            </div>
            
            <!-- Artículos recientes -->
            <div class="stats-box">  {# Usamos la misma clase que stats-box para igualar estilos #}
                <h3 class="mb-3"><i class="fas fa-newspaper me-2"></i>Últimos artículos</h3>
                
                <ul class="list-unstyled mb-3">
                    {% for articulo in articulosRecientes %}
                        <li class="mb-2">
                            <a href="{{ path('app_articulo_show', {'slug': articulo.slug}) }}" 
                            class="text-decoration-none d-block py-1 px-2 rounded article-link">
                                <i class="fas fa-angle-right me-1 text-primary"></i>
                                {{ articulo.titulo }}
                            </a>
                        </li>
                    {% else %}
                        <li class="text-muted small">No hay artículos recientes</li>
                    {% endfor %}
                </ul>
                
                <div class="text-center mt-auto"> {# mt-auto para empujar el botón hacia abajo #}
                    <a href="{{ path('app_articulos') }}" class="btn btn-sm btn-outline-primary">
                        Ver todos los artículos
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <!-- Últimas fotografías con carrusel -->
    <div class="container mt-5">
        <h3 class="mb-4"><i class="fas fa-camera me-2"></i>Últimas fotografías</h3>
        
        <div id="ultimasFotosCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for i in 0..4 %}
                    <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                        <div class="row row-cols-1 row-cols-md-4 g-4">
                            {% for foto in ultimasFotos|slice(i*4, 4) %}
                                <div class="col">
                                    <div class="card h-100">
                                        <div class="position-relative">
                                            <img src="{{ asset(foto.getUrlRelativa()) }}" class="card-img-top" alt="{{ foto.ave.nombreComun }}">
                                            <div class="position-absolute top-0 end-0 p-2">
                                                <button class="btn btn-sm btn-light like-btn" data-foto-id="{{ foto.id }}">
                                                    <i class="fas fa-heart text-danger"></i> 
                                                    <span class="like-count">{{ foto.votos|length }}</span>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ foto.ave.nombreComun }}</h5>
                                            <p class="card-text text-muted small">
                                                Por {{ foto.usuario.username }}<br>
                                                {{ foto.fechaSubida|date('d/m/Y') }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#ultimasFotosCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#ultimasFotosCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>
    </div>
    
    <!-- Contenido para invitados -->
    {% if not app.user %}
        <div class="text-center mt-5 py-5 bg-light rounded">
            <h2>¡Únete a nuestra comunidad!</h2>
            <p class="lead mb-4">Regístrate para comenzar a compartir tus fotos de aves</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-1"></i> Iniciar sesión
                </a>
                <a href="{{ path('app_register') }}" class="btn btn-success btn-lg">
                    <i class="fas fa-user-plus me-1"></i> Registrarse
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Inicializar el carrusel
        document.addEventListener('DOMContentLoaded', function() {
            const carousel = new bootstrap.Carousel('#fotosCarousel', {
                interval: 5000,
                ride: 'carousel'
            });

            new bootstrap.Carousel('#ultimasFotosCarousel', {
                interval: 8000
            });
            
            // Sistema de votación (ejemplo básico)
            document.querySelectorAll('.like-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const fotoId = this.getAttribute('data-foto-id');
                    const likeCount = this.querySelector('.like-count');
                    
                    fetch(`/votar/${fotoId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            likeCount.textContent = data.totalVotos;
                            this.classList.add('active');
                        } else {
                            alert(data.error || 'Error al votar');
                        }
                    })
                    .catch(error => console.error('Error:', error));
                });
            });
        });
    </script>
{% endblock %}