{% extends 'base.html.twig' %}

{% block title %}{{ articulo.titulo }} | BioVision{% endblock %}

{% block body %}
<div class="container my-5">
    <article class="articulo-detalle">
        <div class="text-center mb-5">
            {% if articulo.imagen %}
                <img src="{{ asset('images/articulos/' ~ articulo.imagen) }}" 
                     class="img-fluid rounded shadow" 
                     alt="{{ articulo.titulo }}"
                     style="max-height: 400px;">
            {% endif %}
            <h1 class="mt-3">{{ articulo.titulo }}</h1>
            <p class="text-muted">Publicado el {{ articulo.fechaPublicacion|date('d/m/Y') }}</p>
        </div>
        
        <div class="articulo-contenido">
            {{ articulo.contenido|raw }}
        </div>
        
        <div class="mt-5 text-center">
            <a href="{{ path('app_articulos') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left me-1"></i> Volver a los art√≠culos
            </a>
        </div>
    </article>
</div>

<style>
    .articulo-detalle {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .articulo-contenido {
        line-height: 1.8;
        font-size: 1.1rem;
    }
    
    .articulo-contenido img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
    }
    
    .articulo-contenido h2 {
        margin-top: 2rem;
        color: #2c3e50;
        border-bottom: 1px solid #eee;
        padding-bottom: 0.5rem;
    }
    
    .articulo-contenido h3 {
        margin-top: 1.5rem;
        color: #4e73df;
    }
</style>
{% endblock %}