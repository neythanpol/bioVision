{% extends 'base.html.twig' %}

{% block title %}Aves estivales en Castilla y León | BioVision{% endblock %}

{% block body %}
<div class="container my-5">
    <article class="articulo-detalle">
        <div class="text-center mb-5">
            <img src="{{ asset('images/articulos/aves-estivales-castilla-leon.jpg') }}" 
                 class="img-fluid rounded" 
                 alt="Aves estivales en Castilla y León">
            <h1 class="mt-3">Top aves estivales que ver y fotografiar en Castilla y León</h1>
            <p class="text-muted">Actualizado el {{ "now"|date('d/m/Y') }}</p>
        </div>
        
        <div class="articulo-contenido">
            <!-- Contenido del artículo aquí -->
            <h2>1. Abejaruco Europeo</h2>
            <p>Uno de las aves más coloridas que podemos encontrar...</p>
            
            <!-- Puedes incluir componentes de tus otras entidades -->
            {{ render(url('app_mapa_aves', {region: 'castilla-leon', periodo: 'estival'})) }}
            
            <!-- Galería de fotos relacionadas -->
            <h3 class="mt-5">Galería de fotos</h3>
            <div class="row">
                {% for foto in fotosRelacionadas %}
                    <div class="col-md-4 mb-3">
                        <img src="{{ asset(foto.url) }}" class="img-fluid rounded">
                    </div>
                {% endfor %}
            </div>
        </div>
    </article>
</div>
{% endblock %}